---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Swiper from '~/components/widgets/Swiper.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Swiper />
	<Hero />
	<p>Works</p><hr /><hr /><hr /><hr />
	<HighlightedPosts />
	<p>Roots</p><hr /><hr /><hr /><hr />
	<Steps />
	<span>Elements</span><hr /><hr /><hr /><hr />
	<Features />
	<span>Space</span><hr /><hr /><hr /><hr />
	<Features2 />
	<span>Coordinates</span><hr /><hr /><hr /><hr />
	<Features3 />
	<span>Questions</span><hr /><hr /><hr /><hr />
	<FAQs />
	<span>Statistics</span><hr /><hr /><hr /><hr />
	<Stats />
	<span>Action</span><hr /><hr /><hr /><hr />
	<CallToAction />
</Layout>
