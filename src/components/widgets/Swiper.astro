---
import Picture from '~/components/core/Picture.astro';
---

<div class="swiper">
	<div class="swiper-wrapper">
		<div class="swiper-slide">
			<Picture
				src={import('~/assets/images/hero.jpg')}
				class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
				widths={[400, 768]}
				sizes="(max-width: 767px) 400px, 768px"
				alt="Hero Image"
				aspectRatio="16:9"
				loading="eager"
			/>
		</div>
		<div class="swiper-slide">
			<Picture
				src={import('~/assets/images/steps.jpg')}
				class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
				widths={[400, 768]}
				sizes="(max-width: 767px) 400px, 768px"
				alt="Hero Image"
				aspectRatio="16:9"
				loading="eager"
			/>
		</div>
		<div class="swiper-slide">
			<Picture
				src={import('~/assets/images/tools.jpg')}
				class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
				widths={[400, 768]}
				sizes="(max-width: 767px) 400px, 768px"
				alt="Hero Image"
				aspectRatio="16:9"
				loading="eager"
			/>
		</div>
	</div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline>
	new Swiper('.swiper');
</script>
